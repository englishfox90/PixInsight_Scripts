{
  "repository": {
    "name": "PixInsight Custom Scripts",
    "description": "Custom PixInsight scripts update repository",
    "minPixInsightVersion": "1.8.0"
  },
  "projects": {
    "AstroBinExport": {
      "ready": true,
      "name": "AstroBin Export",
      "sourceDir": "AstroBin Export",
      "zipNamePrefix": "AstroBinExport",
      "version": "3.2.0",
      "piScriptRoot": "src/scripts/AstroBin",
      "piResourceRoot": "rsc/AstroBin",
      "description": "Generates CSV files compatible with AstroBin's bulk acquisition upload feature. Includes automatic FITS header analysis, comprehensive filter database (200+ filters), personal filter sets, and more.",
      "features": [
        "Automatic FITS header analysis",
        "200+ filters across 22+ manufacturers",
        "Personal LRGB + SHO filter set support",
        "Selectable/persistent CSV columns",
        "Improved SQM derivation",
        "Raw frame filtering",
        "Manual filter ID entry",
        "Bortle scale integration"
      ],
      "files": {
        "scripts": [
          "AstroBin_CSV_Export_v3_Modular.js",
          "AstroBin-core.js",
          "AstroBin-filter-database.js",
          "AstroBin-analysis.js",
          "AstroBin-gui.js",
          "AstroBin-gui-methods.js"
        ],
        "resources": [
          "astrobin_filters.csv"
        ],
        "exclude": [
          "archive"
        ]
      }
    },
    "Signature": {
      "ready": false,
      "name": "Master Signature",
      "sourceDir": "Signature",
      "zipNamePrefix": "Signature",
      "version": "0.1.0",
      "piScriptRoot": "src/scripts/Signature",
      "piResourceRoot": "rsc/Signature",
      "description": "Adds professional signature blocks and logos to processed astrophotography images with automatic FITS integration.",
      "features": [
        "Two-line signature format",
        "Automatic FITS integration",
        "Logo overlay support",
        "Live preview with zoom",
        "Professional typography"
      ],
      "files": {
        "scripts": [
          "MasterSignature.js"
        ],
        "resources": [
          "lib/font/Space.ttf",
          "lib/logos/logo.png"
        ],
        "exclude": []
      }
    },
    "SNRAnalysis": {
      "ready": true,
      "name": "SNR Analysis",
      "sourceDir": "SNR Analysis",
      "zipNamePrefix": "SNRAnalysis",
      "version": "1.5.4",
      "piScriptRoot": "src/scripts/SNRAnalysis",
      "piResourceRoot": "rsc/SNRAnalysis",
      "description": "Analyzes how SNR improves with integration depth by creating partial integrations from calibrated subframes and measuring SNR in user-defined ROIs. Generates graphs, CSV/JSON output, and provides insights about diminishing returns.",
      "features": [
        "Multiple integration depth strategies (OSC preset, doubling, Fibonacci, logarithmic, custom)",
        "Full-depth reference integration with ROI selection",
        "Per-depth partial integrations",
        "Optional starless stack generation (StarNet2/StarXTerminator)",
        "Optional STF-based stretching",
        "ROI-based SNR measurement",
        "Stack preview with auto-stretch in results dialog",
        "CSV and JSON output with full metadata",
        "SNR vs time graph generation",
        "Automated insights (diminishing returns, scaling exponent, recommended ranges)",
        "Detailed timing logs"
      ],
      "files": {
        "scripts": [
          "SNRAnalysis_Main.js",
          "core/SNRAnalysis-core.js",
          "core/SNRAnalysis-depth-planner.js",
          "utils/SNRAnalysis-subframe-scanner.js",
          "processing/SNRAnalysis-integrator.js",
          "processing/SNRAnalysis-star-removal.js",
          "processing/SNRAnalysis-stretch.js",
          "processing/SNRAnalysis-snr.js",
          "analysis/SNRAnalysis-roi-auto.js",
          "analysis/SNRAnalysis-graph.js",
          "analysis/SNRAnalysis-insights.js",
          "analysis/SNRAnalysis-output.js",
          "ui/SNRAnalysis-ui.js",
          "ui/SNRAnalysis-ui-header.js",
          "ui/SNRAnalysis-ui-sections.js",
          "ui/SNRAnalysis-results-dialog.js",
          "ui/SNRAnalysis-stack-preview.js",
          "ui/SNRAnalysis-progress.js"
        ],
        "resources": [],
        "exclude": []
      }
    }
